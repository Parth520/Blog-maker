<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <style>
        .body {
            background-image: radial-gradient(#FCF259, #E9A319);
        }
        
        .header {
            height: 60px;
        }
        
        .album {
            background-image: radial-gradient(#FCF259, #E9A319);
        }
    </style>
</head>

<body>

    <%- include("frontend/headersfooters/header.html") %>

        <div class="body">
            <section class="py-5 text-center container">
                <div class="row py-lg-5">
                    <div class="col-lg-6 col-md-8 mx-auto">
                        <h1 class="fw-light">Parth's Personal Blog</h1>
                        <p class="lead text-body-secondary">This website is for my personal use. I write my diary entry here</p>


                    </div>
                </div>
            </section>
            <div class="body2">
                <% if (blogPosts && blogPosts.length > 0) { %>
                    <% blogPosts.forEach((post,index) => { %>
                        <div class="album py-5 bg-body-tertiary">
                            <div class="container">
                                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                                    <div class="col">
                                        <div class="card shadow-sm">
                                            <div class="card-body">
                                                <p class="card-text">Check out your Blog on topic:</p>
                                                <h1>
                                                    <%= post.topic %>
                                                </h1>
                                                <h5>By:
                                                    <%= post.name %>
                                                </h5>

                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="btn-group">
                                                        <form action="/Topic" method="post">
                                                            <input type="hidden" name="index" value="<%= index %>" />
                                                            <button type="submit" class="btn btn-primary">Enter blog</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>


                                <div class="album py-5 bg-body-tertiary">
                                    <div class="container">
                                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                                            <div class="col">
                                                <div class="card shadow-sm">
                                                    <div class="card-body">
                                                        <p class="card-text">Whats in your mind!! Type and post</p>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div class="btn-group">
                                                                <form action="/submit" method="post"><button type="submit" class="btn btn-primary">Create Post</button></form>


                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
            </div>

            <%- include("frontend/headersfooters/footer.html")%>


</body>

</html>